<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CocktailDetailActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/cocktail_detail_MixMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cocktail_detail_MixMethod"/>

        <TextView
            android:id="@+id/cocktail_detail_Ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="18dp"
            android:layout_below="@id/cocktail_detail_MixMethod"/>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cocktail_ingredients_table"
            android:layout_below="@id/cocktail_detail_Ingredients"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/cocktail_detail_GarnishIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Garnish Ingredients"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="18dp"
            android:layout_below="@id/cocktail_ingredients_table"/>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cocktail_garnishIngredients_table"
            android:layout_below="@id/cocktail_detail_GarnishIngredients"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/coktail_detail_instruction_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="18dp"
            android:layout_below="@id/cocktail_garnishIngredients_table"/>

        <TextView
            android:id="@+id/cocktail_detail_Instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cocktail_detail_Instruction"
            android:layout_marginTop="18dp"
            android:layout_below="@id/coktail_detail_instruction_title"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>